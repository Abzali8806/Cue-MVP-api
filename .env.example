# Environment Configuration
ENVIRONMENT=development

# AWS RDS PostgreSQL Database Configuration
# Replace with your AWS RDS PostgreSQL connection details
# Format: postgresql://username:password@rds-endpoint:port/database_name
# Example: postgresql://cueuser:yourpassword@cue-db.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/cue_production
DATABASE_URL=postgresql://YOUR_RDS_USERNAME:YOUR_RDS_PASSWORD@YOUR_RDS_ENDPOINT:5432/YOUR_DATABASE_NAME

# Security Keys - GENERATE SECURE RANDOM KEYS
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))" to generate
SECRET_KEY=GENERATE_SECURE_RANDOM_KEY_HERE
JWT_SECRET_KEY=GENERATE_SECURE_JWT_SECRET_KEY_HERE

# Google OAuth Configuration
# Get from: Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID for web application
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_FROM_CONSOLE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_FROM_CONSOLE

# GitHub OAuth Configuration  
# Get from: GitHub > Settings > Developer settings > OAuth Apps
# Create new OAuth App
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID_FROM_SETTINGS
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET_FROM_SETTINGS

# AWS Configuration
# Get from: AWS IAM > Users > Security credentials
# Create programmatic access user with required permissions
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1

# Speech-to-Text Service (Optional)
# Get from: Azure Portal > Cognitive Services > Speech Services
AZURE_SPEECH_KEY=YOUR_AZURE_SPEECH_KEY_IF_USING
AZURE_SPEECH_REGION=YOUR_AZURE_REGION_IF_USING
